    <style name="mm_input_box_type_2">
        <!--高度控制-->
        <item name="android:layout_height">82px</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">700px</item>
        <item name="android:layout_marginLeft">38px</item>
        <item name="android:layout_marginRight">38px</item>
    </style>
</resources>